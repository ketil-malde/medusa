element meta { 
   attribute id { text },       # id corresponds to directory name
   attribute version { text },  # metadata version, bump on update
   element files { element file { 
       attribute path { text }, # file name, path relative to current dir
       attribute md5 { text },  # md5 checksum
       attribute mimetype { text }  # mime-type of the file (e.g. text/plain)
   }*
 }
}
